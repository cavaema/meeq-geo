    <script>
        // Configurazione
        const API_URL = window.location.origin + '/api';
        
        // Stato globale
        let currentUser = null;
        let selectedTableId = null; // üÜï Tavolo selezionato per vedere utenti
        let badgeInterval = null; // üÜï Interval per polling badge
        let currentConversationId = null;
        let currentConversation = null;
        let messageCheckInterval = null;
        let conversationsCheckInterval = null;

        // Utility: Gestione schermate
        function showScreen(screenId) {
            const screens = ['emailCheckScreen', 'registerScreen', 'pinScreen', 'tableScreen', 'usersScreen', 'conversationsScreen', 'chatScreen'];
            screens.forEach(id => {
                document.getElementById(id).classList.add('hidden');
            });
            document.getElementById(screenId).classList.remove('hidden');
            
            // Mostra/nascondi header
            const header = document.getElementById('mainHeader');
            if (screenId === 'chatScreen') {
                header.classList.add('hidden');
                document.body.classList.add('chat-screen-active');
            } else {
                header.classList.remove('hidden');
                document.body.classList.remove('chat-screen-active');
            }
        }

        // Utility: Sessione
        function saveSession(userData) {
            localStorage.setItem('meeq_session', JSON.stringify(userData));
            currentUser = userData;
        }

        function getSession() {
            const session = localStorage.getItem('meeq_session');
            return session ? JSON.parse(session) : null;
        }

        function clearSession() {
            localStorage.removeItem('meeq_session');
            currentUser = null;
        }

        // Utility: Tavolo da URL
        function getTableFromURL() {
            const params = new URLSearchParams(window.location.search);
            return params.get('tavolo');
        }

        // Utility: Formattazione tempo
        function formatTime(dateString) {
            const date = new Date(dateString);
            const now = new Date();
            const diffMs = now - date;
            const diffMins = Math.floor(diffMs / 60000);
            const diffHours = Math.floor(diffMs / 3600000);
            const diffDays = Math.floor(diffMs / 86400000);

            if (diffMins < 1) return 'Ora';
            if (diffMins < 60) return `${diffMins}m fa`;
            if (diffHours < 24) return `${diffHours}h fa`;
            if (diffDays < 7) return `${diffDays}g fa`;
            
            return date.toLocaleDateString('it-IT', { day: 'numeric', month: 'short' });
        }

        // Utility: Gender badge HTML
        function getGenderBadgeHTML(gender) {
            const symbols = {
                male: '‚ôÇ',
                female: '‚ôÄ',
                other: '‚öß'
            };
            return `<span class="gender-badge ${gender}">${symbols[gender] || '?'}</span>`;
        }

        // Utility: Nome anonimo generato da hash
        function getAnonymousName(userId, conversationId) {
            const hash = (userId + conversationId).split('').reduce((a, b) => {
                a = ((a << 5) - a) + b.charCodeAt(0);
                return a & a;
            }, 0);
            const num = Math.abs(hash % 100) + 1;
            return `Anonimo ${num}`;
        }

        // API Calls
        async function apiCall(endpoint, method = 'GET', body = null) {
            try {
                const options = {
                    method,
                    headers: {
                        'Content-Type': 'application/json'
                    }
                };
                
                if (currentUser && currentUser.token) {
                    options.headers['Authorization'] = `Bearer ${currentUser.token}`;
                }
                
                if (body) {
                    options.body = JSON.stringify(body);
                }
                
                const response = await fetch(`${API_URL}${endpoint}`, options);
                const data = await response.json();
                
                if (!response.ok) {
                    throw new Error(data.error || 'Errore nella richiesta');
                }
                
                return data;
            } catch (error) {
                console.error('API Error:', error);
                throw error;
            }
        }

        // Check Email (prima schermata)
        document.getElementById('emailCheckForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const email = document.getElementById('checkEmail').value.trim();
            
            try {
                const data = await apiCall('/check-email', 'POST', { email });
                
                // Salva email temporaneamente
                sessionStorage.setItem('currentEmail', email);
                
                if (data.exists) {
                    // Email gi√† registrata - vai a PIN per re-login
                    document.getElementById('emailDisplay').textContent = email;
                    showScreen('pinScreen');
                    alert('PIN inviato! Controlla la tua email per rientrare.');
                } else {
                    // Email nuova - vai a registrazione
                    document.getElementById('registerEmailDisplay').textContent = email;
                    showScreen('registerScreen');
                }
                
                // Salva email per futuro uso
                localStorage.setItem('meeq_email', email);
                
            } catch (error) {
                alert(error.message || 'Errore durante la verifica email');
            }
        });

        // Registrazione (solo per nuovi utenti)
        document.getElementById('registerForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const email = sessionStorage.getItem('currentEmail');
            if (!email) {
                alert('Errore: email non trovata. Riprova.');
                showEmailCheckScreen();
                return;
            }
            
            const nome = document.getElementById('nome').value.trim();
            const cognome = document.getElementById('cognome').value.trim();
            const telefono = document.getElementById('telefono').value.trim();
            const gender = document.getElementById('gender').value;
            const privacyAccepted = document.getElementById('privacyConsent').checked;
            const newsletterAccepted = document.getElementById('newsletterConsent').checked;
            
            if (!privacyAccepted) {
                alert('Devi accettare la Privacy Policy per continuare');
                return;
            }
            
            try {
                const data = await apiCall('/register', 'POST', {
                    nome,
                    cognome,
                    email,
                    telefono,
                    gender,
                    privacyAccepted,
                    newsletterAccepted
                });
                
                document.getElementById('emailDisplay').textContent = email;
                
                // Salva dati temporanei per schermata PIN
                sessionStorage.setItem('pendingRegistration', JSON.stringify({
                    nome,
                    cognome,
                    email,
                    telefono,
                    gender,
                    isNewUser: true
                }));
                
                showScreen('pinScreen');
                alert('PIN inviato! Controlla la tua email.');
            } catch (error) {
                alert(error.message || 'Errore durante la registrazione');
            }
        });

        // Verifica PIN
        document.getElementById('pinForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const email = sessionStorage.getItem('currentEmail');
            if (!email) {
                alert('Sessione scaduta. Riprova la registrazione.');
                showEmailCheckScreen();
                return;
            }
            
            const pin = document.getElementById('pin').value.trim();
            const distinctiveSign = document.getElementById('distinctiveSign').value.trim();
            
            try {
                // Invia sempre il segno distintivo (pu√≤ essere modificato ogni giorno)
                const data = await apiCall('/verify-pin', 'POST', {
                    email: email,
                    pin,
                    distinctiveSign: distinctiveSign || null
                });
                
                // Recupera i dati dell'utente
                const pending = sessionStorage.getItem('pendingRegistration');
                const userData = pending ? JSON.parse(pending) : { email };
                
                // Salva sessione con segno distintivo aggiornato
                saveSession({
                    token: data.token,
                    userId: data.userId || data.user.id,
                    email: email,
                    nome: userData.nome || data.user.nome,
                    cognome: userData.cognome || data.user.cognome,
                    gender: userData.gender || data.user.gender,
                    distinctiveSign: distinctiveSign || null,
                    tableNumber: null
                });
                
                sessionStorage.removeItem('pendingRegistration');
                sessionStorage.removeItem('currentEmail');
                
                // üî• CORREZIONE: Se c'√® tavolo dal QR, assegnalo automaticamente
                const tableFromQR = getTableFromURL();
                if (tableFromQR) {
                    try {
                        // Assegna il tavolo dal QR automaticamente
                        await apiCall('/select-table', 'POST', { tavolo: tableFromQR });
                        
                        // Aggiorna sessione
                        currentUser.tableNumber = tableFromQR;
                        saveSession(currentUser);
                        
                        // üÜï Vai alla schermata tavoli attivi
                        document.getElementById('headerActions').style.display = 'flex';
                        startBadgePolling();
                        showOtherTablesScreen();
                    } catch (error) {
                        console.error('Errore assegnazione tavolo da QR:', error);
                        // Se fallisce, mostra schermata scelta tavoli
                        loadTables();
                        showScreen('tableScreen');
                    }
                } else {
                    // Nessun QR: mostra schermata scelta tavoli
                    loadTables();
                    showScreen('tableScreen');
                }
                
            } catch (error) {
                alert(error.message || 'PIN non valido');
            }
        });

        // Carica tavoli
        async function loadTables() {
            try {
                const tables = await apiCall('/tables/active');
                const tablesGrid = document.getElementById('tablesGrid');
                tablesGrid.innerHTML = '';
                
                if (!tables || tables.length === 0) {
                    tablesGrid.innerHTML = '<div class="empty-state"><div class="empty-state-text">Nessun tavolo con utenti attivi</div></div>';
                    return;
                }
                
                // üÜï Determina la modalit√†: scelta tavolo proprio o visualizzazione altri tavoli
                const isSelectingOwnTable = !currentUser.tableNumber;
                const tablesToShow = isSelectingOwnTable ? tables : tables.filter(t => t.id !== currentUser.tableNumber);
                
                if (tablesToShow.length === 0) {
                    tablesGrid.innerHTML = '<div class="empty-state"><div class="empty-state-text">Nessun altro tavolo con utenti attivi</div></div>';
                    return;
                }
                
                tablesToShow.forEach(table => {
                    const tableCard = document.createElement('div');
                    tableCard.className = 'table-card';
                    
                    // üÜï Click handler diverso in base alla modalit√†
                    if (isSelectingOwnTable) {
                        // Modalit√† scelta tavolo proprio
                        tableCard.onclick = () => selectTable(table.id);
                        // Evidenzia tavolo da QR se presente
                        const suggestedTable = getTableFromURL();
                        if (suggestedTable && table.id === suggestedTable) {
                            tableCard.classList.add('active');
                        }
                    } else {
                        // Modalit√† visualizzazione altri tavoli
                        tableCard.onclick = () => selectTableToView(table.id);
                    }
                    
                    const tableNumber = table.name.replace('Tavolo ', '');
                    
                    tableCard.innerHTML = `
                        <div class="table-number">${tableNumber}</div>
                        <div class="table-users">${table.userCount} ${table.userCount === 1 ? 'utente' : 'utenti'}</div>
                    `;
                    
                    tablesGrid.appendChild(tableCard);
                });
            } catch (error) {
                console.error('Errore caricamento tavoli:', error);
                alert('Errore nel caricamento dei tavoli');
            }
        }

        // üÜï Seleziona tavolo da VISUALIZZARE (non assegnare)
        function selectTableToView(tableId) {
            selectedTableId = tableId;
            loadUsers(tableId);
            showScreen('usersScreen');
            document.getElementById('currentTableDisplay').textContent = tableId.replace('tavolo-', '');
        }

        // üÜï Mostra schermata tavoli attivi
        function showOtherTablesScreen() {
            loadTables();
            showScreen('tableScreen');
        }

        // Seleziona tavolo (ASSEGNAZIONE - usata solo da QR e init)
        async function selectTable(tableNumber) {
            try {
                await apiCall('/select-table', 'POST', { tavolo: tableNumber });
                
                currentUser.tableNumber = tableNumber;
                saveSession(currentUser);
                
                // Vai alla schermata tavoli attivi
                showOtherTablesScreen();
            } catch (error) {
                alert(error.message || 'Errore nella selezione del tavolo');
            }
        }

        // Carica utenti
        async function loadUsers(tableNumber) {
            try {
                const data = await apiCall(`/table/${tableNumber}/users`);
                
                const usersList = document.getElementById('usersList');
                usersList.innerHTML = '';
                
                // ‚úÖ data √® gi√† un array, non data.users
                const otherUsers = Array.isArray(data) ? data.filter(u => u.id !== currentUser.userId) : [];
                
                if (otherUsers.length === 0) {
                    usersList.innerHTML = '<div class="empty-state"><div class="empty-state-icon">üòî</div><div class="empty-state-text">Non ci sono altri utenti a questo tavolo</div></div>';
                    return;
                }
                
                otherUsers.forEach(user => {
                    const userItem = document.createElement('div');
                    userItem.className = 'user-item';
                    userItem.onclick = () => startConversation(user.id);
                    
                    // üÜï Mostra UTENTE ANONIMO (non nome reale)
                    const anonymousName = `Utente Anonimo #${user.id % 1000}`;
                    const initial = '?';
                    
                    userItem.innerHTML = `
                        <div class="user-avatar">${initial}</div>
                        <div class="user-info">
                            <div class="user-name">
                                ${anonymousName}
                                ${getGenderBadgeHTML(user.gender)}
                            </div>
                        </div>
                    `;
                    
                    usersList.appendChild(userItem);
                });
                
            } catch (error) {
                console.error('Errore caricamento utenti:', error);
                alert('Errore nel caricamento degli utenti');
            }
        }

        // Inizia conversazione
        async function startConversation(otherUserId) {
            try {
                // ‚úÖ recipientId non otherUserId
                const data = await apiCall('/conversations', 'POST', { recipientId: otherUserId });
                currentConversationId = data.conversation.id;
                currentConversation = data.conversation;
                
                loadChat(data.conversation);
                showScreen('chatScreen');
            } catch (error) {
                alert(error.message || 'Errore nell\'avvio della conversazione');
            }
        }

        // Carica conversazioni
        async function loadConversations() {
            try {
                const data = await apiCall('/conversations');
                const conversationsList = document.getElementById('conversationsList');
                conversationsList.innerHTML = '';
                
                if (!data || data.length === 0) {
                    conversationsList.innerHTML = '<div class="empty-state"><div class="empty-state-icon">üí¨</div><div class="empty-state-text">Nessuna conversazione</div><div class="empty-state-subtext">Inizia a chattare con qualcuno!</div></div>';
                    showScreen('conversationsScreen');
                    return;
                }
                
                data.forEach(conv => {
                    const isInitiator = conv.user1_id === currentUser.userId;
                    const otherUser = conv.otherUser;
                    const isPending = conv.status === 'pending';
                    const isAccepted = conv.status === 'accepted';
                    const unreadCount = conv.unread_count || 0;
                    
                    const convItem = document.createElement('div');
                    convItem.className = 'conversation-item';
                    
                    if (isPending) {
                        convItem.classList.add('pending');
                        if (!isInitiator) {
                            // Se sei il ricevente, clicca per vedere e accettare/rifiutare
                            convItem.onclick = () => showPendingConversation(conv);
                        }
                    } else if (isAccepted) {
                        convItem.onclick = () => openConversation(conv.id);
                    }
                    
                    if (unreadCount > 0) {
                        convItem.classList.add('unread');
                    }
                    
                    // üÜï Determina nome da mostrare: prima "Tavolo X", poi nome se rivelato
                    const nameRevealed = isInitiator ? conv.user2_name_revealed : conv.user1_name_revealed;
                    const tableNumber = otherUser.tavolo ? otherUser.tavolo.replace('tavolo-', '') : '?';
                    const displayName = nameRevealed ? `${otherUser.nome} ${otherUser.cognome}` : `Tavolo ${tableNumber}`;
                    
                    convItem.innerHTML = `
                        <div class="conversation-header">
                            <div class="conversation-user">
                                ${displayName}
                                ${getGenderBadgeHTML(otherUser.gender)}
                            </div>
                            <div class="conversation-time">${formatTime(conv.updated_at)}</div>
                        </div>
                        <div class="conversation-preview ${isPending ? 'pending-message' : ''}">
                            ${isPending ? (isInitiator ? '‚è≥ In attesa di risposta...' : 'üí¨ Nuova richiesta di conversazione!') : (conv.last_message || 'Nessun messaggio')}
                        </div>
                        ${unreadCount > 0 ? `<div class="unread-badge">${unreadCount}</div>` : ''}
                    `;
                    
                    conversationsList.appendChild(convItem);
                });
                
                showScreen('conversationsScreen');
                
            } catch (error) {
                console.error('Errore caricamento conversazioni:', error);
                alert('Errore nel caricamento delle conversazioni');
            }
        }

        // Mostra conversazione pending per accettare/rifiutare
        async function showPendingConversation(conv) {
            try {
                const messagesData = await apiCall(`/conversations/${conv.id}/messages`);
                
                const modal = document.getElementById('reportModal');
                modal.querySelector('.modal-content').innerHTML = `
                    <div class="modal-header">
                        <div class="modal-title">
                            <span>üí¨</span>
                            <span>Nuova Conversazione</span>
                        </div>
                        <button class="modal-close" onclick="closeReportModal(); loadConversations();">√ó</button>
                    </div>
                    <div class="modal-body">
                        <div class="user-info" style="margin-bottom: 20px; padding: 15px; background: rgba(255,255,255,0.05); border-radius: 12px;">
                            <div style="display: flex; align-items: center; gap: 10px; margin-bottom: 8px;">
                                <strong>${getAnonymousName(conv.otherUser.id, conv.id)}</strong>
                                ${getGenderBadgeHTML(conv.otherUser.gender)}
                            </div>
                            ${conv.otherUser.distinctive_sign ? `<div class="distinctive-sign">üîç ${conv.otherUser.distinctive_sign}</div>` : ''}
                        </div>
                        
                        <div class="info-message">
                            <strong>Messaggio iniziale:</strong>
                        </div>
                        
                        <div style="background: rgba(255,255,255,0.1); padding: 15px; border-radius: 12px; margin: 15px 0; max-height: 200px; overflow-y: auto;">
                            ${messagesData.messages.map(msg => `
                                <div style="margin-bottom: 10px;">
                                    <div style="color: rgba(255,255,255,0.6); font-size: 11px;">${formatTime(msg.created_at)}</div>
                                    <div>${msg.message}</div>
                                </div>
                            `).join('')}
                        </div>
                        
                        <div class="warning-message">
                            Vuoi accettare questa conversazione? Una volta accettata, potrai chattare liberamente.
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-danger" onclick="respondToConversation(${conv.id}, 'blocked')">Rifiuta</button>
                        <button class="btn btn-success" onclick="respondToConversation(${conv.id}, 'accepted')">Accetta</button>
                    </div>
                `;
                
                modal.classList.add('show');
                
            } catch (error) {
                console.error('Errore caricamento pending conversation:', error);
                alert('Errore nel caricamento della conversazione');
            }
        }

        // Rispondi a conversazione pending
        async function respondToConversation(conversationId, action) {
            try {
                await apiCall(`/conversations/${conversationId}/${action}`, 'POST');
                closeReportModal();
                
                if (action === 'accepted') {
                    openConversation(conversationId);
                } else {
                    loadConversations();
                }
            } catch (error) {
                alert(error.message || 'Errore nell\'azione');
            }
        }

        // Apri conversazione
        async function openConversation(conversationId) {
            try {
                const data = await apiCall(`/conversations/${conversationId}`);
                currentConversationId = conversationId;
                currentConversation = data.conversation;
                
                loadChat(data.conversation);
                showScreen('chatScreen');
            } catch (error) {
                alert(error.message || 'Errore nell\'apertura della conversazione');
            }
        }

        // Carica chat
        async function loadChat(conversation) {
            const isInitiator = conversation.user1_id === currentUser.userId;
            const otherUser = isInitiator ? conversation.user2 : conversation.user1;
            
            // Aggiorna header
            const nameRevealed = isInitiator ? conversation.user2_name_revealed : conversation.user1_name_revealed;
            const tableRevealed = isInitiator ? conversation.user2_table_revealed : conversation.user1_table_revealed;
            
            const displayName = nameRevealed ? `${otherUser.nome} ${otherUser.cognome}` : getAnonymousName(otherUser.id, conversation.id);
            const displayTable = tableRevealed ? `Tavolo ${otherUser.table_number}` : 'Tavolo sconosciuto';
            
            document.getElementById('chatUserName').textContent = displayName;
            document.getElementById('chatUserGenderBadge').innerHTML = getGenderBadgeHTML(otherUser.gender);
            document.getElementById('chatUserTable').textContent = displayTable;
            
            if (otherUser.distinctive_sign) {
                document.getElementById('chatUserSign').textContent = `üîç ${otherUser.distinctive_sign}`;
                document.getElementById('chatUserSign').classList.remove('hidden');
            } else {
                document.getElementById('chatUserSign').classList.add('hidden');
            }
            
            // üÜï Gestione Pending Actions e Revelation Buttons
            const pendingActions = document.getElementById('pendingActions');
            const revelationButtons = document.getElementById('revelationButtons');
            const revealNameBtn = document.getElementById('revealNameBtn');
            const revealTableBtn = document.getElementById('revealTableBtn');
            const messageInput = document.getElementById('messageInput');
            const sendBtn = document.getElementById('sendBtn');
            
            if (conversation.status === 'pending') {
                // üÜï Conversazione pending
                revelationButtons.classList.add('hidden');
                
                if (!isInitiator) {
                    // Destinatario: mostra pulsanti Accetta/Rifiuta, disabilita input
                    pendingActions.classList.remove('hidden');
                    messageInput.disabled = true;
                    messageInput.placeholder = '‚è≥ Accetta la conversazione per rispondere';
                    sendBtn.disabled = true;
                } else {
                    // Initiator: pu√≤ scrivere, nascondi pulsanti
                    pendingActions.classList.add('hidden');
                    messageInput.disabled = false;
                    messageInput.placeholder = 'Scrivi un messaggio...';
                    sendBtn.disabled = false;
                }
                
            } else if (conversation.status === 'accepted') {
                // üÜï Conversazione accettata
                pendingActions.classList.add('hidden');
                revelationButtons.classList.remove('hidden');
                messageInput.disabled = false;
                messageInput.placeholder = 'Scrivi un messaggio...';
                sendBtn.disabled = false;
                
                // Stato pulsante nome
                const myNameRevealed = isInitiator ? conversation.user1_name_revealed : conversation.user2_name_revealed;
                if (myNameRevealed) {
                    revealNameBtn.classList.add('revealed');
                    revealNameBtn.disabled = true;
                    revealNameBtn.innerHTML = '<span>‚úì</span><span>Nome Rivelato</span>';
                } else {
                    revealNameBtn.classList.remove('revealed');
                    revealNameBtn.disabled = false;
                    revealNameBtn.innerHTML = '<span>üë§</span><span>Rivela Nome</span>';
                }
                
                // Stato pulsante tavolo
                const myTableRevealed = isInitiator ? conversation.user1_table_revealed : conversation.user2_table_revealed;
                revealTableBtn.style.display = 'flex';
                if (myTableRevealed) {
                    revealTableBtn.classList.add('revealed');
                    revealTableBtn.disabled = true;
                    revealTableBtn.innerHTML = '<span>‚úì</span><span>Tavolo Rivelato</span>';
                } else {
                    revealTableBtn.classList.remove('revealed');
                    revealTableBtn.disabled = false;
                    revealTableBtn.innerHTML = '<span>ü™ë</span><span>Rivela Tavolo</span>';
                }
            } else {
                // Altri stati
                pendingActions.classList.add('hidden');
                revelationButtons.classList.add('hidden');
            }
            
            // Carica messaggi
            loadMessages();
            
            // Avvia polling
            if (messageCheckInterval) {
                clearInterval(messageCheckInterval);
            }
            messageCheckInterval = setInterval(loadMessages, 2000);
        }

        // Carica messaggi
        async function loadMessages() {
            try {
                const data = await apiCall(`/conversations/${currentConversationId}/messages`);
                const container = document.getElementById('messagesContainer');
                
                // Salva posizione scroll
                const wasAtBottom = container.scrollHeight - container.scrollTop - container.clientHeight < 100;
                
                container.innerHTML = '';
                
                if (data.messages.length === 0) {
                    container.innerHTML = '<div class="empty-state"><div class="empty-state-text">Nessun messaggio</div><div class="empty-state-subtext">Inizia la conversazione!</div></div>';
                    return;
                }
                
                // üÜï Determina se nascondere messaggi (pending + non initiator)
                const isInitiator = currentConversation.user1_id === currentUser.userId;
                const isPending = currentConversation.status === 'pending';
                const shouldHideMessages = isPending && !isInitiator;
                
                data.messages.forEach(msg => {
                    const isSent = msg.sender_id === currentUser.userId;
                    const messageDiv = document.createElement('div');
                    messageDiv.className = `message ${isSent ? 'sent' : 'received'}`;
                    
                    // üÜï Nascondi messaggi ricevuti se pending
                    const messageText = (shouldHideMessages && !isSent) 
                        ? 'üîí Messaggio nascosto (Accetta per leggere)' 
                        : msg.message;
                    
                    messageDiv.innerHTML = `
                        <div${shouldHideMessages && !isSent ? ' style="font-style: italic; opacity: 0.6;"' : ''}>${messageText}</div>
                        <div class="message-time">${formatTime(msg.created_at)}</div>
                    `;
                    
                    container.appendChild(messageDiv);
                });
                
                // Scroll automatico se eri gi√† in fondo
                if (wasAtBottom || data.messages.length <= 1) {
                    container.scrollTop = container.scrollHeight;
                }
                
            } catch (error) {
                console.error('Errore caricamento messaggi:', error);
            }
        }

        // Invia messaggio
        async function sendMessage() {
            const input = document.getElementById('messageInput');
            const message = input.value.trim();
            
            if (!message || !currentConversationId) return;
            
            try {
                await apiCall(`/conversations/${currentConversationId}/messages`, 'POST', { message });
                input.value = '';
                loadMessages();
            } catch (error) {
                alert(error.message || 'Errore nell\'invio del messaggio');
            }
        }

        // Enter per inviare
        document.getElementById('messageInput')?.addEventListener('keydown', (e) => {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                sendMessage();
            }
        });

        // Rivela nome
        async function revealName() {
            if (!confirm('Sei sicuro di voler rivelare il tuo nome?')) return;
            
            try {
                // üÜï Endpoint corretto
                await apiCall(`/conversations/${currentConversationId}/reveal-name`, 'POST');
                
                // Ricarica conversazione
                const data = await apiCall(`/conversations/${currentConversationId}`);
                currentConversation = data.conversation || data;
                loadChat(currentConversation);
                
            } catch (error) {
                alert(error.message || 'Errore nella rivelazione del nome');
            }
        }

        // Rivela tavolo (solo per initiator)
        async function revealTable() {
            if (!confirm('Sei sicuro di voler rivelare il tuo tavolo?')) return;
            
            try {
                await apiCall(`/conversations/${currentConversationId}/reveal-table`, 'POST');
                
                // Ricarica conversazione
                const data = await apiCall(`/conversations/${currentConversationId}`);
                currentConversation = data.conversation || data;
                loadChat(currentConversation);
                
            } catch (error) {
                alert(error.message || 'Errore nella rivelazione del tavolo');
            }
        }

        // üÜï Accetta conversazione
        async function acceptConversation() {
            try {
                // ‚úÖ POST non PATCH
                await apiCall(`/conversations/${currentConversationId}/accept`, 'POST');
                
                // Ricarica conversazione
                const data = await apiCall(`/conversations/${currentConversationId}`);
                currentConversation = data.conversation || data;
                loadChat(currentConversation);
                loadMessages();
                
            } catch (error) {
                alert(error.message || 'Errore nell\'accettazione della conversazione');
            }
        }

        // üÜï Rifiuta conversazione
        async function rejectConversation() {
            if (!confirm('Sei sicuro di voler rifiutare questa conversazione?')) return;
            
            try {
                // ‚úÖ POST non PATCH
                await apiCall(`/conversations/${currentConversationId}/reject`, 'POST');
                
                // Torna alle conversazioni
                backToConversations();
                
            } catch (error) {
                alert(error.message || 'Errore nel rifiuto della conversazione');
            }
        }

        // Mostra modal segnalazione
        function showReportModal() {
            if (!currentConversationId) {
                alert('Nessuna conversazione attiva');
                return;
            }
            
            const modal = document.getElementById('reportModal');
            if (modal) {
                modal.querySelector('.modal-content').innerHTML = `
                    <div class="modal-header">
                        <div class="modal-title">
                            <span>‚ö†Ô∏è</span>
                            <span>Segnala Utente</span>
                        </div>
                        <button class="modal-close" onclick="closeReportModal()">√ó</button>
                    </div>
                    <div class="modal-body">
                        <div class="warning-message">
                            Stai per segnalare questo utente all'amministratore. Questa azione √® irreversibile.
                        </div>
                        <div class="form-group">
                            <label for="reportReason">Motivo della segnalazione (opzionale)</label>
                            <textarea id="reportReason" rows="4" placeholder="Descrivi il motivo della segnalazione..."></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" onclick="closeReportModal()">Annulla</button>
                        <button class="btn btn-danger" onclick="submitReport()">
                            <span>üì§ Invia Segnalazione</span>
                        </button>
                    </div>
                `;
                modal.classList.add('show');
            }
        }

        async function submitReport() {
            const reason = document.getElementById('reportReason').value.trim();
            
            if (!confirm('Sei sicuro di voler segnalare questo utente?')) return;
            
            try {
                await apiCall(`/conversations/${currentConversationId}/report`, 'POST', {
                    reason: reason || null
                });
                
                closeReportModal();
                alert('Segnalazione inviata con successo. L\'amministratore verr√† notificato.');
                
            } catch (error) {
                alert(error.message || 'Errore nell\'invio della segnalazione');
            }
        }

        function closeReportModal() {
            const modal = document.getElementById('reportModal');
            if (modal) {
                modal.classList.remove('show');
            }
        }

        // Navigazione
        function showEmailCheckScreen() {
            sessionStorage.removeItem('pendingRegistration');
            sessionStorage.removeItem('currentEmail');
            document.getElementById('checkEmail').value = localStorage.getItem('meeq_email') || '';
            showScreen('emailCheckScreen');
        }

        function showRegisterScreen() {
            showScreen('registerScreen');
        }

        function showTableScreen() {
            loadTables();
            showScreen('tableScreen');
            // üÜï Mostra header actions
            document.getElementById('headerActions').style.display = 'flex';
        }
        // üÜï Mostra schermata conversazioni
        function showConversationsScreen() {
            loadConversations();
            showScreen('conversationsScreen');
        }


        
        // üÜï Logout
        function logout() {
            stopBadgePolling();
            clearSession();
            document.getElementById('headerActions').style.display = 'none';
            showScreen('emailCheckScreen');
            location.reload(); // Ricarica la pagina per pulire tutto
        }

        function showUsersScreen() {
            if (currentUser && currentUser.tableNumber) {
                loadUsers(currentUser.tableNumber);
                showScreen('usersScreen');
            } else {
                showTableScreen();
            }
        }

        function backToConversations() {
            if (messageCheckInterval) {
                clearInterval(messageCheckInterval);
            }
            loadConversations();
        }

        // Inizializzazione
        async function init() {
            const session = getSession();
            
            if (!session) {
                // Nessuna sessione - mostra schermata check email
                const savedEmail = localStorage.getItem('meeq_email');
                if (savedEmail) {
                    document.getElementById('checkEmail').value = savedEmail;
                }
                
                showScreen('emailCheckScreen');
                return;
            }
            
            currentUser = session;
            
            // Verifica validit√† token
            try {
                await apiCall('/verify-token');
                
                // Token valido, vai alla schermata appropriata
                // üÜï Mostra header actions e avvia badge polling
                document.getElementById('headerActions').style.display = 'flex';
                startBadgePolling();
                
                if (currentUser.tableNumber) {
                    // Ha gi√† un tavolo assegnato ‚Üí vai ai tavoli attivi
                    showOtherTablesScreen();
                } else {
                    // Non ha tavolo assegnato
                    const tableFromQR = getTableFromURL();
                    
                    if (tableFromQR) {
                        // C'√® un QR nell'URL ‚Üí assegnalo automaticamente
                        try {
                            await apiCall('/select-table', 'POST', { tavolo: tableFromQR });
                            currentUser.tableNumber = tableFromQR;
                            saveSession(currentUser);
                            showOtherTablesScreen();
                        } catch (error) {
                            console.error('Errore assegnazione tavolo da QR:', error);
                            // Mostra schermata scelta tavolo PROPRIO
                            loadTables();
                            showScreen('tableScreen');
                        }
                    } else {
                        // Nessun QR ‚Üí mostra schermata scelta tavoli
                        loadTables();
                        showScreen('tableScreen');
                    }
                }
            } catch (error) {
                // Token non valido, logout
                clearSession();
                showScreen('emailCheckScreen');
            }
        }

        // Salva email per login futuro
        document.getElementById('checkEmail')?.addEventListener('change', (e) => {
            localStorage.setItem('meeq_email', e.target.value);
        });

        // Click fuori dal modal per chiudere
        document.getElementById('reportModal')?.addEventListener('click', (e) => {
            if (e.target.id === 'reportModal') {
                closeReportModal();
            }
        });

        // Cleanup intervals on page unload
        window.addEventListener('beforeunload', () => {
            if (messageCheckInterval) clearInterval(messageCheckInterval);
            if (conversationsCheckInterval) clearInterval(conversationsCheckInterval);
        });

        // Avvia app
        init();
    </script>
</body>
</html>
